<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bbk.students">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.deletestudent.DeleteStudentActivity" />
        <activity android:name=".ui.modifystudent.ModifyStudentActivity" />
        <activity android:name=".ui.createstudent.CreateStudentActivity" />
        <activity android:name=".ui.studentsbygrade.StudentsByGradeActivity" />
        <activity android:name=".ui.studentsbyage.StudentsByAgeActivity" />
        <activity android:name=".ui.astudentbyid.AStudentByIdActivity" />
        <activity android:name=".ui.allstudents.AllStudentsActivity" />
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>